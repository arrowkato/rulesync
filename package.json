{
	"name": "rulesync",
	"version": "0.2.0",
	"description": "Unified AI rules management CLI tool that generates configuration files for various AI development tools",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"bin": {
		"rulesync": "dist/index.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "tsx src/cli/index.ts",
		"build": "tsup src/cli/index.ts --format cjs,esm --dts --clean",
		"lint": "biome lint src/",
		"format": "biome format --write src/",
		"format:check": "biome format src/",
		"check": "biome check src/",
		"secretlint": "secretlint \"**/*\"",
		"test": "vitest",
		"test:watch": "vitest --watch",
		"test:coverage": "vitest --coverage",
		"prepublishOnly": "pnpm build"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"keywords": [
		"ai",
		"rules",
		"cli",
		"copilot",
		"cursor",
		"cline",
		"configuration",
		"development"
	],
	"author": "dyoshikawa",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/dyoshikawa/rulesync.git"
	},
	"bugs": {
		"url": "https://github.com/dyoshikawa/rulesync/issues"
	},
	"homepage": "https://github.com/dyoshikawa/rulesync#readme",
	"publishConfig": {
		"access": "public"
	},
	"packageManager": "pnpm@7.33.7",
	"devDependencies": {
		"@biomejs/biome": "2.0.0",
		"@secretlint/secretlint-rule-preset-recommend": "10.1.0",
		"@tsconfig/node24": "24.0.1",
		"@types/node": "24.0.3",
		"@vitest/coverage-v8": "3.2.4",
		"secretlint": "10.1.0",
		"tsup": "8.5.0",
		"tsx": "4.20.3",
		"typescript": "5.8.3",
		"vitest": "3.2.4"
	},
	"dependencies": {
		"chokidar": "4.0.3",
		"commander": "14.0.0",
		"gray-matter": "4.0.3",
		"marked": "15.0.12"
	}
}
