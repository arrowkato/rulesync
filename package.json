{
	"name": "rulesync",
	"version": "0.37.0",
	"description": "Unified AI rules management CLI tool that generates configuration files for various AI development tools",
	"keywords": [
		"ai",
		"rules",
		"cli",
		"copilot",
		"cursor",
		"cline",
		"configuration",
		"development"
	],
	"homepage": "https://github.com/dyoshikawa/rulesync#readme",
	"bugs": {
		"url": "https://github.com/dyoshikawa/rulesync/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/dyoshikawa/rulesync.git"
	},
	"license": "MIT",
	"author": "dyoshikawa",
	"type": "module",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"bin": {
		"rulesync": "dist/index.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"bcheck": "biome check src/",
		"bcheck:fix": "biome check --write src/",
		"build": "tsup src/cli/index.ts --format cjs,esm --dts --clean",
		"check": "pnpm run bcheck && pnpm run lint && pnpm run typecheck",
		"dev": "tsx src/cli/index.ts",
		"fix": "pnpm run bcheck:fix && pnpm run lint:fix",
		"generate": "pnpm run dev generate",
		"lint": "oxlint . --max-warnings 0",
		"lint:fix": "oxlint . --fix --max-warnings 0",
		"prepublishOnly": "pnpm build",
		"secretlint": "secretlint \"**/*\"",
		"sort": "sort-package-json",
		"test": "vitest run --silent",
		"test:coverage": "vitest run --coverage --silent",
		"test:watch": "vitest --silent",
		"typecheck": "tsgo --noEmit"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm exec lint-staged"
	},
	"dependencies": {
		"chokidar": "4.0.3",
		"commander": "14.0.0",
		"gray-matter": "4.0.3",
		"js-yaml": "4.1.0",
		"marked": "15.0.12",
		"micromatch": "4.0.8",
		"zod": "3.25.67"
	},
	"devDependencies": {
		"@biomejs/biome": "2.0.0",
		"@secretlint/secretlint-rule-preset-recommend": "10.1.0",
		"@tsconfig/node24": "24.0.1",
		"@types/js-yaml": "4.0.9",
		"@types/micromatch": "4.0.9",
		"@types/node": "24.0.3",
		"@typescript/native-preview": "7.0.0-dev.20250623.1",
		"@vitest/coverage-v8": "3.2.4",
		"lint-staged": "16.1.2",
		"o3-search-mcp": "0.0.3",
		"oxlint": "1.4.0",
		"secretlint": "10.1.0",
		"simple-git-hooks": "2.13.0",
		"sort-package-json": "3.2.1",
		"tsup": "8.5.0",
		"tsx": "4.20.3",
		"typescript": "5.8.3",
		"vitest": "3.2.4"
	},
	"packageManager": "pnpm@10.12.2",
	"engines": {
		"node": ">=20.0.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
